<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
	<display-name>sliceshopserver</display-name>

	<servlet>
		<servlet-name>SliceShopServer</servlet-name>
		<servlet-class>com.sliceshop.SliceShopServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SliceShopServer</servlet-name>
		<url-pattern>/SliceShopServer</url-pattern>
	</servlet-mapping>
</web-app>